<%- include("partials/header") %>
    <div class="product-edit-full-area">
        <div id="product-edit">
            <form action="/admin/<%= product.id %>" method="post">
                <input type="hidden" name="id" value="<%= product.id %>">
                <div class="mb-3" style="padding-top:2%;">
                <label for="productName" style="color:#f90;" class="form-label">Product Name</label>
                <input type="text" class="form-control" id="productName" name="productBrand" aria-describedby="productNameHelp" value="<%= product.brand %>">
                <div id="productNameHelp" class="form-text">Edit the product name</div>
                </div>
                <div class="mb-3" style="padding-top:2%;">
                    <label for="productFeatures" style="color:#f90;" class="form-label">Product Features</label>
                    <input type="text" class="form-control" name="productFeatures" id="productFeatures" aria-describedby="productFeaturesHelp" value="<%= product.features %>">
                    <div id="productFeaturesHelp" class="form-text">Edit the product features</div>
                </div>
                <div class="mb-3" style="padding-top:2%;">
                    <label for="productPrice" style="color:#f90;" class="form-label">Product Price</label>
                    <input type="text" class="form-control" name="productPrice" id="productPrice" aria-describedby="productPriceHelp" value="<%= product.price %>">
                    <div id="productPriceHelp" class="form-text">Edit the product price</div>
                </div>
                <div class="mb-3" style="padding-top:2%;">
                    <label for="productImage" style="color:#f90;" class="form-label">Product Image</label>
                    <input type="text" class="form-control" name="productImage" id="productImage" aria-describedby="productImageHelp" value="<%= product.img %>">
                    <div id="productImageHelp" class="form-text">Edit the product image with its full extensiton</div>
                </div>
                <div class="mb-3" style="padding-top:2%;">
                    <label for="productCategory" style="color:#f90;" class="form-label">Product Category</label>
                    <input type="text" class="form-control" name="productImage" id="productCategory" aria-describedby="productCategoryHelp" value="<%= product.categoryId %>">
                    <div id="productCategoryHelp" class="form-text">Edit the product image with its full extensiton</div>
                </div>           
                <button type="submit" style="position:relative;margin-left:40%; padding-left:2rem;padding-right: 2rem; text-align:center;" class="btn btn-warning">Submit</button>
            </form>
        </div>
    </div>
   

<%- include("partials/footer") %>